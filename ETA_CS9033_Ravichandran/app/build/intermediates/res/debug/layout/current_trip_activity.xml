<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:text="@string/tripname"
        android:id="@+id/tripnamelabel"
        android:layout_weight="0.08"
        android:layout_gravity="left|top"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_tripname"
        android:layout_weight="0.08"
        android:layout_gravity="right"
        android:layout_toLeftOf="@id/tripnamelabel"

        /></LinearLayout>

    <!-- <EditText
         android:layout_width="217dp"
         android:layout_height="wrap_content"
         android:id="@+id/edit_tripname" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:id="@+id/date"
        android:layout_weight="0.07"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_date"
        android:layout_weight="0.07"
        android:layout_gravity="center_horizontal"/>
        </LinearLayout>

 <!--   <EditText
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_date" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:id="@+id/time"
        android:layout_weight="0.08" />

    <TextView
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_time"
        android:layout_weight="0.07"
        android:layout_gravity="right"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/friends"
        android:id="@+id/friends"
        android:layout_weight="0.08"
       />



        <TextView
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_friends"
            android:layout_weight="0.07"
            android:layout_gravity="right"/>
    </LinearLayout>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:layout_weight="0.08"
        android:text="@string/location" />

    <TextView
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_location"
            android:layout_weight="0.08"/>
    </LinearLayout>



        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/text_error"
        android:text="@string/notrips"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:editable="true"
        android:textIsSelectable="true"
        android:textSize="28dp"
        android:layout_gravity="center_horizontal"
        />




    <ImageView
        android:id="@+id/oops"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone"
        android:src="@drawable/oops" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button

        android:text="@string/endtrip"
        android:id="@+id/starttripbtn"
        android:layout_centerVertical="true"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_width="104dp"
        android:layout_height="41dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A80000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp" />

    <Button

        android:text="@string/tripstatus"
        android:id="@+id/tripstatusbtn"
        android:layout_centerVertical="true"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_width="104dp"
        android:layout_height="41dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A80000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="0dp" />
     </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button

        android:text="@string/currentloc"
        android:id="@+id/current_loc"
        android:layout_centerVertical="true"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_width="104dp"
        android:layout_height="41dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A80000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="60dp"
         />

    <Button

        android:text="@string/back"
        android:id="@+id/backbtn"
        android:layout_centerVertical="true"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_width="104dp"
        android:layout_height="41dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A80000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
         />
    </LinearLayout>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_tripmember"
        android:layout_weight="0.08"
        android:text="@string/tripmemberstatus"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_people"
        android:layout_weight="0.08"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_distleft"
        android:layout_weight="0.08"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_left"
        android:layout_weight="0.08"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
